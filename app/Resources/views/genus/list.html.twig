{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Genus</th>
                    <th># of species</th>
                    <th>Last updated</th>
                </tr>
                </thead>
                <tbody>
                {% for genus in genusList %}
                    <tr>
                        <td>
                            <a href="{{ path('app_genus_show', {'genusName': genus.name}) }}">
                                {{ genus.name }}
                            </a>
                        </td>
                        <td> {{ genus.speciesCount }}</td>
                        <td> {{ genus.updatedAt|date('Y-m-d') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}

